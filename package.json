{
  "name": "clipboard-pro",
  "version": "0.0.1",
  "license": "MIT",
  "main": "main/index.js",
  "author": {
    "name": "Ziqing Yuan"
  },
  "description": "剪切板管理应用，采用Electron + Vite + React打造",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/lTimeless/vite-reactts-electron-starter"
  },
  "productName": "ClipboardPro",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "postinstall": "node ./node_modules/electron/install.js && electron-rebuild -f -w --only better-clipboard && npx prisma migrate dev --name init --schema=./electron/prisma/schema.prisma",
    "prepare": "husky",
    "prisma:seed": "ts-node ./electron/prisma/seed.ts",
    "electron-rebuild": "electron-rebuild -f -w --only better-clipboard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "@vitejs/plugin-react": "^1.2.0",
    "active-win": "^8.1.1",
    "better-clipboard": "^1.0.0",
    "dayjs": "^1.11.10",
    "electron-icns-ex": "^1.0.1",
    "electron-is-dev": "^2.0.0",
    "nanoid": "3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.12"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^19.1.9",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "postcss": "^8.4.12",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.9.2",
    "typescript": "^4.6.2"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
